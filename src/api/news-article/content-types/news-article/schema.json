    "excerpt": { "type": "text" },
    "body": { "type": "richtext" },
    "gallery": { "type": "media", "multiple": true },
    "authorName": { "type": "string" },
    "seo": { "type": "component", "repeatable": false, "component": "shared.seo" }
  }
}

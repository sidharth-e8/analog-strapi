{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global Settings",
    "description": "Global site configuration including logo, footer, and hero reference."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "logoLight": {
      "type": "media",
      "multiple": false
    },
    "logoDark": {
      "type": "media",
      "multiple": false
    },
    "favicon": {
      "type": "media",
      "multiple": false
    },

    "hero": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::hero.hero"
    },

    "footerLinkGroups": {
      "type": "component",
      "repeatable": true,
      "component": "shared.link-group"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.link"
    },
    "copyrightText": {
      "type": "string",
      "default": "Â©2025 Analog. All rights reserved."
    },

    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}

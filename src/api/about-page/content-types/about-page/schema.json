{
  "kind": "singleType",
  "collectionName": "about_pages",
  "info": { "singularName": "about-page", "pluralName": "about-pages", "displayName": "About Page" },
  "options": { "draftAndPublish": true },
  "attributes": {
    "sections": {
      "type": "dynamiczone",
      "components": [
        "layout.banner-section",
        "layout.image-text",
        "layout.value-grid",
        "layout.join-us",
        "layout.news-carousel"
      ]
    },
    "featuredArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::news-article.news-article"
    },
    "seo": { "type": "component", "repeatable": false, "component": "shared.seo" }
  }
}
